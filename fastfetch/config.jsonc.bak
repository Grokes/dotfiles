{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "~/.config/fastfetch/images/hypr.png",
    "type": "auto",
    "height": 20
  },
  "display": {
    "separator": " ",
    "key": {
      "type": "both"
    },
  },
  "modules": [
    {
      "type": "custom",
      "format": "\u001b[90m┌───────────────────────\u001b[34mSystem\u001b[90m─────────────────────────┐"
    },
    {
      "type": "os",
      "keyColor": "34",
      "format": "{name}"
    },
    {
      "key": "host",
      "type": "title",
      "keyColor": "34"
    },
    {
      "type": "kernel",
      "key": "kernel",
      "keyColor": "34"
    },
    {
      "type": "packages",
      "format": "{} (pacman)",
      "key": "pkgs",
      "keyColor": "34"  
    },
    "break",
    {
      "type": "command",
      "key": "age",
      "keyColor": "34",
      "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
    },
    {
      "type": "custom",
      "format": "\u001b[90m└──────────────────────────────────────────────────────┘"
    },
    {
      "type": "custom",
      "format": "\u001b[90m┌───────────────────────\u001b[34mEnviroment\u001b[90m─────────────────────┐"
    },
    {
      "key": "Resolution",
      "keyColor": "34",
      "type": "display",
      "compactType": "original-with-refresh-rate"
    },
    {
      "type": "shell",
      "key": "shell",
      "keyColor": "34" 
    },
    {
      "type": "terminal",
      "key": "term",
      "keyColor": "34" 
    },
    {
      "type": "de",
      "key": "DE",
      "keyColor": "34" 
    },
    {
      "type": "wm",
      "key": "wm",
      "keyColor": "34" 
    },
    {
      "type": "custom",
      "format": "\u001b[90m└──────────────────────────────────────────────────────┘"
    },
    {
      "type": "custom",
      "format": "\u001b[90m┌───────────────────────\u001b[34mHardware\u001b[90m───────────────────────┐"
    },
    {
      "type": "host",
      "key": "Machine",
      "format": "{1}",
      "keyColor": "34"
    },
    {
      "type": "cpu",
      "format": "{0}",
      "keyColor": "34"
    },
    {
      "type": "gpu",
      "key": "GPU",
      "format": "{2} [{6}]",
      "keyColor": "34"
    },
    {
      "type": "memory",
      "key": "RAM",
      "format": "{total}",
      "keyColor": "34"
    },
    {
      "type": "physicaldisk",
      "key": "Disk",
      "format": "{2} {1}",
      "keyColor": "34"
    },
    {
      "type": "custom",
      "format": "\u001b[90m└──────────────────────────────────────────────────────┘"
    },
      ]
}
